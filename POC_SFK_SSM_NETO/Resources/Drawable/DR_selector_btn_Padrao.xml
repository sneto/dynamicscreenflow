<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">

    <!-- Controle de status/cor do botão padrão -->
    <selector>

      <!-- Desabilitado -->
      <item android:state_enabled="false"  >
        <shape>
          <corners android:radius="1.5dp" />
          <solid android:color="#CFCFCF"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

      <!-- Pressionado -->
      <item android:state_pressed="true" >
        <shape>
          <corners android:radius="1.5dp" />
          <solid android:color="#FF6666"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

      <!-- Selecionado -->
      <item android:state_selected="true">
        <shape>
          <corners android:radius="1.5dp" />
          <solid android:color="#373737"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

      <!-- Normal -->
      <item>
        <shape>
          <corners android:radius="1.5dp" />
          <solid android:color="@color/col_btn_padrao"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

    </selector>

  </item>

</layer-list>
