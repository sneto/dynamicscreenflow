<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0dp">

    <!-- Controle de status/cor do botão padrão -->
    <selector>

      <!-- Desabilitado -->
      <item android:state_enabled="false"  >
        <shape>
          <corners android:radius="0dp" />
          <solid android:color="#CFCFCF"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

      <!-- Pressionado -->
      <item android:state_pressed="true" >
        <shape>
          <corners android:radius="0dp" />
          <solid android:color="#D8D8D8"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

      <!-- Selecionado -->
      <item android:state_selected="true">
        <shape>
          <corners android:radius="0dp" />
          <solid android:color="#D8D8D8"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

      <!-- Normal -->
      <item>
        <shape>
          <corners android:radius="0dp" />
          <solid android:color="#C0C0C0"></solid>
          <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
      </item>

    </selector>

  </item>

</layer-list>
