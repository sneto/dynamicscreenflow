<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- draw bottom line to fill the spaces between tabs -->
  <item android:top="63dp">
    <shape android:shape="rectangle">
      <solid android:color="#FFFFFF" />
    </shape>
  </item>

  <!-- leave bottom line only 1px of height, the rest is masked out -->
  <item android:top="63dp" android:bottom="1dp">
    <shape android:shape="rectangle">
      <solid android:color="#FFFFFF" />
    </shape>
  </item>

  <!-- draw tab background -->
  <item >
    <shape android:shape="rectangle">
      <solid android:color="#FFFFFF" />
    </shape>
  </item>

  <!-- Linha no bottom  -->
  <item android:top="48dp">
    <shape android:shape="rectangle">
      <solid android:color="#f30100" />
    </shape>
  </item>

</layer-list>