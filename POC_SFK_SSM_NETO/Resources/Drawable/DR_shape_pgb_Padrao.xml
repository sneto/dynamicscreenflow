<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
  <item android:id="@android:id/background">
    <shape>      
      <gradient android:startColor="#F7F7F7" android:endColor="#F7F7F7" />
      <stroke android:width="1dp" android:color="#F7F7F7" />
    </shape>
  </item>

  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <gradient android:startColor="#FF4747" android:endColor="#FF4747" />
        
        <stroke android:width="1dp" android:color="#FF4747" />
    
      </shape>
    </clip>
  </item>
</layer-list>